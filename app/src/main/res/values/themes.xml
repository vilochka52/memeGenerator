<resources>
    <style name="Theme.MemeGenerator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Medium</item>
        <item name="materialButtonStyle">@style/Widget.MG.Button</item>
        <item name="materialCardViewStyle">@style/Widget.MG.Card</item>
    </style>

    <style name="Shape.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.MG.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="Widget.MG.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
    </style>
</resources>
